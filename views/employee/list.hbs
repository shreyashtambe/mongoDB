<h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a> Task List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>Completed</th>
            <th>Date</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.Description}}</td>
            <td>{{this.Completed}}</td>
            <td>{{this.Date}}</td>
            <td>{{this.Time}}</td>
            <td>
                <a href="/employee/{{this._id}}" ><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr> 
        {{/each}}
    </tbody>
</table>